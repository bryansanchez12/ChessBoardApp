<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lobby">

    <TextView
        android:id="@+id/title"
        android:layout_width="274dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="583dp"
        android:fontFamily="sans-serif-black"
        android:src="@mipmap/black_king"
        android:text="Connected!"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="502dp"
        android:fontFamily="sans-serif-black"
        android:src="@mipmap/black_king"
        android:text="Please choose:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/png_board_player"
        android:layout_width="151dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="370dp"
        android:src="@mipmap/board_player" />

    <Button
        android:id="@+id/gl_local_game"
        android:layout_width="30dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="345dp"
        android:backgroundTint="@color/Red"
        android:text="@string/play_against_board" />

    <ImageView
        android:id="@+id/png_online_player"
        android:layout_width="128dp"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="147dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="175dp"
        android:src="@mipmap/online_player" />

    <Button
        android:id="@+id/gl_online_game"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="563dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/Red"
        android:text="@string/find_online_player" />


</RelativeLayout>